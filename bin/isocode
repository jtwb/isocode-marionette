#!/usr/bin/env node

var render = require('../render');
var argv = require('optimist')
  .demand('_').argv;
var fs = require('fs');

var renderopts = {
  user_file: argv._[0]
};

if (!process.stdin.isTTY) {
  renderopts.stdin = fs.readFileSync('/dev/stdin').toString();
  console.log(renderopts.stdin);
}

render(renderopts, function(html) {
  console.log(html)
});
